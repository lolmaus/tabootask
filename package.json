{
	"name": "tabootask",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host 0.0.0.0",
		"dev:mock": "MOCK_DB=true MOCK_AUTH=true pnpm run dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "playwright test --retries 0",
		"test:live": "playwright test -c playwright-live.config.ts --retries 0",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio --host 0.0.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.22.0",
		"@fastify/deepmerge": "^3.0.0",
		"@ngneat/falso": "^7.3.0",
		"@playwright/test": "^1.51.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.19.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/vite": "^4.0.12",
		"@types/node": "^22.13.10",
		"arctic": "^3.5.0",
		"drizzle-kit": "^0.30.5",
		"drizzle-zod": "^0.7.0",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-prettier": "^5.2.3",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"mdsvex": "^0.12.3",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.22.6",
		"svelte-check": "^4.1.5",
		"tailwindcss": "^4.0.12",
		"tiny-invariant": "^1.3.3",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.1",
		"uuid": "^11.1.0",
		"vite": "^6.2.1",
		"vitest": "^3.0.8",
		"zod": "^3.24.2"
	},
	"dependencies": {
		"@inlang/paraglide-sveltekit": "^0.15.5",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"drizzle-orm": "^0.39.3",
		"postgres": "^3.4.5"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
