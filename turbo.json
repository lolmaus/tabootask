{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env":  ["CONVEX_*"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dashboard": {
      "cache": false,
      "env":  ["CONVEX_*"]
    },
    "dev": {
      "cache": false,
      "env":  ["CONVEX_*", "IS_TEST"],
      "persistent": true
    },
    "deploy": {
      "cache": false,
      "env":  ["CONVEX_*"]
    },
    "test": {
      "cache": false,
      "env":  []
    }
  }
}
